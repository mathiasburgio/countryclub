<div id="turnos" class=p-3>
    <div class="row mb-3">
        <div class="col">
            <select name="vista" class="form-control text-center" disabled>
                <option value="listado">Listado</option>
                <option value="Grilla">Grilla</option>
            </select>
        </div>
        <div class="col">
            <div class="input-group">
                <div class="input-group-prepend">
                    <button class="btn btn-warning" name="semana-anterior"><i class="fas fa-arrow-left"></i></button>
                </div>
                <input type="text" name="semana" readonly class="form-control text-center">
                <div class="input-group-append">
                    <button class="btn btn-warning" name="semana-siguiente"><i class="fas fa-arrow-right"></i></button>
                </div>
            </div>
        </div>
    </div>
    <div name="listado">
        <div class="border table-responsive">
            <table class="table table-sm table-hover table-striped mb-0">
                <thead class="thead-dark">
                    <tr>
                        <th style="width:150px !important;">Fecha</th>
                        <th>Espacio</th>
                        <th>Usuario</th>
                        <th>Estado</th>
                        <th class="text-right">Cobrado</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
    <div name="grilla" class="d-none">

    </div>
</div>
<div class="d-none">
    <div id="modal_cobrar">
        <div class="form-group">
            <label for="">Monto</label>
            <input type="number" name="monto" class="form-control">
        </div>
        <div class="form-group">
            <label for="">Medio</label>
            <select name="medio" class="form-control">
                <option value="0" selected disabled>-SELECCIONAR-</option>
                <option value="efectivo">Efectivo</option>
                <option value="cta dni">Cuenta DNI</option>
                <option value="mercadopago">Mercadopago</option>
                <option value="transferencia">Transferencia</option>
            </select>
        </div>
        <div class="form-group">
            <label for="">Detalle</label>
            <input type="text" name="detalle" class="form-control">
        </div>
        <div class="row">
            <div class="col">
                <button class="btn btn-block btn-danger" name="cancelar">Cancelar</button>
            </div>
            <div class="col">
                <button class="btn btn-block btn-primary" name="cobrar">Cobrar</button>
            </div>
        </div>
    </div>
</div>
<script src="/scripts/Turnos.js"></script>
<script>
    var turnos = new Turnos();
    window.onload = () =>{
        turnos.ini();
    }
</script>